---
import Layout from "../layouts/Layout.astro";
import About from "../components/About.astro";
---

<Layout title="The Red Arrows Trust">
  <main x-data="{ aboutOpen: false }" @keydown.escape="aboutOpen = false">
    <About />
    <div
      class="h-screen bg-[url('/public/rarrowXL.jpeg')] bg-cover bg-center bg-no-repeat"
      id="hero"
    >
      <div
        class="mx-auto flex h-full max-w-7xl flex-col items-center justify-between py-6"
      >
        <div
          class="h-16 w-36 rounded-xl bg-neutral-200 px-2 pt-1 md:h-24 md:w-48"
        >
          <img src="rarrowLogo.png" alt="Raf Logo" />
        </div>

        <div class="flex flex-col items-center">
          <div
            class="flex flex-col items-center space-y-4 bg-slate-800/10 p-4 sm:rounded-xl sm:bg-slate-800/5"
            x-data
          >
            <div class="space-y-2">
              <h1 class="text-center text-4xl font-bold text-white md:text-5xl">
                Support the best in British aviation
              </h1>
              <p class="text-center text-lg font-medium">
                The Red Arrows Charity Trust supports worthy causes throughout
                the UK.
              </p>
            </div>
            <div
              class="flex flex-col space-y-2 md:flex-row md:space-x-2 md:space-y-0"
            >
              <button
                class="rounded bg-rafred px-4 py-2 text-xl font-semibold text-white transition-colors hover:bg-red-700"
                x-on:click="window.alert('Redirect to Stripe or other payment provider')"
                >Make a donation</button
              >
              <button
                class="rounded px-4 py-2 text-xl font-semibold text-govblue underline underline-offset-2 transition-colors hover:text-rafblue hover:decoration-4"
                x-on:click="aboutOpen = true">About us</button
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
