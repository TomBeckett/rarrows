<div
  class="h-[90vh] bg-[url('/rarrowXL.jpeg')] bg-cover bg-center bg-no-repeat sm:h-screen"
  id="hero"
>
  <div
    class="relative flex h-full w-full flex-col items-center space-y-4 pt-14 backdrop-blur-md md:pt-20 2xl:pt-40"
    x-data
  >
    <!-- Start hero content -->
    <div class="hidden w-48 md:block">
      <img src="planeDiamond.png" alt="Red Arrows Trust Diamond 9" />
    </div>
    <!-- Text container -->
    <div class="max-w-3xl space-y-2 text-white">
      <h1 class="text-center text-4xl font-bold text-white md:text-8xl">
        Support the best in British aviation
      </h1>
      <p class="text-center text-lg">
        The Red Arrows Charity Trust supports worthy causes throughout the UK.
      </p>
    </div>
    <div class="flex flex-col space-y-2 md:flex-row md:space-x-2 md:space-y-0">
      <button
        class="rounded bg-rafred px-4 py-2 text-xl font-semibold text-white transition-colors hover:bg-red-700"
        x-on:click="window.alert('Redirect to Stripe or other payment provider')"
        >Make a donation
        <button
          class="rounded border-2 px-4 py-2 text-xl font-semibold text-white transition-colors hover:bg-rafaltblue"
          x-on:click="aboutOpen = true">Apply for a grant</button
        >
      </button>
    </div>
    <div class="group absolute bottom-2 w-20 cursor-pointer lg:bottom-8">
      <span
        class="block w-24 font-semibold text-rafblue transition-transform ease-in group-hover:-translate-y-1"
        >Scroll down</span
      >
      <a href="#about">
        <img
          src="falconTopDown.png"
          alt="falcon menu plane"
          class="rotate-180 transition-transform duration-150 ease-linear hover:skew-y-3"
        />
      </a>
    </div>
  </div>
</div>
